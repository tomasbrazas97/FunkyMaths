<Page
    x:Class="PatternSolver.Calculator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PatternSolver"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid x:ConnectionId='1' x:Name="LayoutRoot">
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="Assets/background.jpg"></ImageBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        
        <TextBlock  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4"  TextWrapping="Wrap" Text="Calculator"
                   VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50" FontFamily="Impact"/>
        <TextBox x:ConnectionId='2' 
            IsReadOnly="True"
            x:Name="result" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="220"/>


        <Button x:ConnectionId='3'                    x:Name="btn7" FontFamily="Impact" Content="7" Grid.Row="2" Grid.Column="1"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="42"></Button>
        <Button x:ConnectionId='4'                    x:Name="btn8" FontFamily="Impact" Content="8"  Grid.Row="2" Grid.Column="2"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="42"></Button>
        <Button x:ConnectionId='5'                    x:Name="btn9" FontFamily="Impact" Content="9"  Grid.Row="2" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="42"></Button>
        <Button x:ConnectionId='6'                      x:Name="btnDiv" FontFamily="Impact" Content="/"  Grid.Row="2" Grid.Column="4"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="42"></Button>
        <Button x:ConnectionId='7'                    x:Name="btn4"  FontFamily="Impact" Content="4"  Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="42"></Button>
        <Button x:ConnectionId='8'                    x:Name="btn5" FontFamily="Impact" Content="5" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="42"></Button>
        <Button x:ConnectionId='9'                    x:Name="btn6" FontFamily="Impact" Content="6" Grid.Row="3" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="42"></Button>
        <Button x:ConnectionId='10'                        x:Name="btnTimes" FontFamily="Impact" Content="x" Grid.Row="3" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Width="42"></Button>
        <Button x:ConnectionId='11'                    x:Name="btn1" FontFamily="Impact" Content="1" Grid.Row="4" Grid.Column="1"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="42"></Button>
        <Button x:ConnectionId='12'                    x:Name="btn2" FontFamily="Impact" Content="2" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="42"></Button>
        <Button x:ConnectionId='13'                     x:Name="btn3" FontFamily="Impact" Content="3" Grid.Row="4" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="42"></Button>
        <Button x:ConnectionId='14'                        x:Name="btnMinus" FontFamily="Impact" Content="-"  Grid.Row="4" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Width="42"></Button>
        <Button x:ConnectionId='15'                        x:Name="btnEqual" FontFamily="Impact" Content="=" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="42"></Button>
        <Button x:ConnectionId='16'                    x:Name="btn0" FontFamily="Impact" Content="0" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="42"></Button>
        <Button x:ConnectionId='17'                        x:Name="btnClear" FontFamily="Impact" Content="C" Grid.Row="5" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="42"></Button>
        <Button x:ConnectionId='18'                       x:Name="btnPlus" FontFamily="Impact" Content="+" Grid.Row="5" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Width="42"></Button>

        <Button x:ConnectionId='19' x:Name="HomeButton" Content="Home" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="6" HorizontalAlignment="Stretch" VerticalAlignment="Center"
               Background="#FF13D38D" FontSize="40" FontFamily="Impact" BorderBrush="Black" BorderThickness="5"                         >
        </Button>
    </Grid>
</Page>

